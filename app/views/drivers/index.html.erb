<div class="container">

  <h4>LISTING DRIVERS</h4>

  <%= link_to 'New Driver', new_driver_path, class:"btn btn-primary" %>
  <table class="table table-striped">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Email</th>
      <th scope="col">Car Make</th>
      <th scope="col">Car Model</th>
      <th scope="col">Car Color</th>
      <th scope="col">Car Year</th>
      <th scope="col"></th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>

    <% @drivers.each do |driver| %>
      <% if driver.organization.id==current_user.organization_id%>
        <tr>
          <td scope="row"><%= driver.id %></td>
          <td><%= driver.first_name %></td>
          <td><%= driver.last_name %></td>
          <td><%= driver.phone %></td>
          <td><%= driver.email %></td>
          <%driver.vehicles.each do |vehicle|%>
            <td><%= vehicle.car_make %></td>
            <td><%= vehicle.car_model %></td>
            <td><%= vehicle.car_color %></td>
            <td><%= vehicle.car_year %></td>
          <%end%>
          <td><%= link_to 'Show', driver_path(driver) %> </td>
          <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
          <td><%= link_to 'Destroy', driver_path(driver),
                          method: :delete,
                          data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <%= link_to 'Back', welcome_index_path, class:"btn btn-danger" %>
</div>
